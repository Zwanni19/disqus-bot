import random

def handle_front() -> str:
    options = [
        "Front. Was genau brauchst du: Setup / Fehler / Schritte?",
        "Front. Sag mir kurz: was geht nicht?",
        "Front. Poste den Fehlertext, dann sag ich dir den Fix.",
    ]
    return random.choice(options)

def handle_liebstest(user_a: str, user_b: str) -> str:
    a = (user_a or "").strip()
    b = (user_b or "").strip()

    if not a or not b:
        return "Nutzung: bot sag liebestest <NameA> <NameB>"

    # gleiche Person -> immer 100%
    if a.lower() == b.lower():
        pct = 100
    else:
        pct = random.randint(0, 100)

    return f"â¤ï¸ Liebstest {a} + {b}: {pct}%"

def handle_help(rest: str) -> str:
    if rest:
        return f"Ich kenne aktuell: 'bot sag front' und 'bot sag liebestest <A> <B>'. Du hast geschrieben: {rest}"
    return "Befehle: 'bot sag front' | 'bot sag liebestest <A> <B>'"
